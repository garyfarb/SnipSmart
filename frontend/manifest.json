{
  "name": "SnipSmart",
  "description": "Capture Image -> AI the Image -> Smile :)",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["scripting", "activeTab", "tabs"],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}